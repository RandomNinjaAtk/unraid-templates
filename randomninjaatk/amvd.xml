<?xml version="1.0"?>
<Container version="2">
  <Beta>True</Beta>
  <Name>amvd</Name>
  <Repository>randomninjaatk/amvd</Repository>
  <Registry>https://hub.docker.com/r/randomninjaatk/amvd</Registry>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/RandomNinjaAtk/docker-amvd</Support>
  <Project>https://github.com/RandomNinjaAtk/docker-amvd</Project>
  <Category>MediaApp:Music</Category>
  <TemplateURL>https://raw.githubusercontent.com/RandomNinjaAtk/unraid-templates/dev/randomninjaatk/amvd.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/RandomNinjaAtk/unraid-templates/master/randomninjaatk/img/picard.png</Icon>
  <Description>Automated Music Video Downloader :: This script will automatically download music videos for your Lidarr artist library</Description>
  <Overview>Automated Music Video Downloader :: This script will automatically download music videos for your Lidarr artist library</Overview>
  <MyIP/>
  <DonateText/>
  <DonateLink></DonateLink>
  <DonateImg/>
  <WebUI></WebUI>
  <ExtraParams/>
  <PostArgs/>
  <Network>bridge</Network>
  <Config Name="Host Path for /config" Target="/config" Default="" Mode="rw" Description="Container Path: /config" Type="Path" Display="always-hide" Required="true" Mask="false"/>
  <Config Name="Host Path for /storage" Target="/mnt/user" Default="/mnt/user" Mode="rw" Description="Container Path" Type="Path" Display="always-hide" Required="true" Mask="false"/>
  <Config Name="Music Video Library Location" Target="LIBRARY" Default="/mnt/user/media/musicvideos" Mode="" Description="Destination location for downloaded files" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Enable Automatic Script Start" Target="AUTOSTART" Default="true" Mode="" Description="true = Enabled :: Runs script automatically on startup" Type="Variable" Display="always" Required="true" Mask="false"/>  <Config Name="Number of Concurrent Processes" Target="NumberConcurrentProcess" Default="3" Mode="" Description="Number of concurrent processes, controls download concurrency and encoding/tagging concurrency" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Lidarr Url" Target="LidarrUrl" Default="http://127.0.0.1:8686" Mode="" Description="ONLY used if Lidarr List Import is enabled..." Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Lidarr API Key" Target="LidarrAPIkey" Default="" Mode="" Description="ONLY used if Lidarr List Import is enabled..." Type="Variable" Display="always" Required="false" Mask="false"/>
  <Config Name="Musicbrainz Mirror URL" Target="MBRAINZMIRROR" Default="https://musicbrainz.org" Mode="" Description="OPTIONAL: Only change if using a different mirror" Type="Variable" Display="advanced-hide" Required="false" Mask="false"/>
  <Config Name="Musicbrainz Rate Limit" Target="MBRATELIMIT" Default="1" Mode="" Description="OPTIONAL: musicbrainz rate limit, musicbrainz allows only 1 connection per second, max setting is 10" Type="Variable" Display="advanced-hide" Required="false" Mask="false"/>
  <Config Name="USER_ID" Target="USER_ID" Default="99" Mode="" Description="Container Variable: USER_ID" Type="Variable" Display="advanced-hide" Required="false" Mask="false"/>
  <Config Name="GROUP_ID" Target="GROUP_ID" Default="100" Mode="" Description="Container Variable: GROUP_ID" Type="Variable" Display="advanced-hide" Required="false" Mask="false"/>
</Container>
